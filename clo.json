{
  "version": 1,
  "env-prefix": "VG",
  "app": "vangogh",
  "hint": "CLI GOG.com client",
  "desc": "CLI GOG.com client to download products with metadata",
  "flags": [
    {
      "token": "verbose",
      "abbr": "v",
      "hint": "show more info when available",
      "desc": "show additional information, like examples, where available"
    }
  ],
  "commands": [
    {
      "token": "fetch",
      "abbr": "f",
      "hint": "fetch product data",
      "desc": "fetch product data by media and type",
      "arguments": [
        "username",
        "username-file",
        "password",
        "password-file",
        "media",
        "fetch-type"
      ]
    },
    {
      "token": "download",
      "abbr": "d",
      "hint": "download files",
      "desc": "download product files and images",
      "arguments": [
        "username",
        "username-file",
        "os",
        "lang",
        "media",
        "download-type"
      ]
    }
  ],
  "arguments": [
    {
      "token": "username",
      "abbr": "u",
      "hint": "GOG.com username"
    },
    {
      "token": "username-file",
      "abbr": "uf",
      "hint": "path to a file containing GOG.com username",
      "env": true
    },
    {
      "token": "password",
      "abbr": "p",
      "hint": "GOG.com password"
    },
    {
      "token": "password-file",
      "abbr": "pf",
      "hint": "path to a file containing GOG.com password",
      "env": true
    },
    {
      "token": "media",
      "abbr": "m",
      "hint": "media type",
      "desc": "media type - games or movies",
      "env": true,
      "required": true,
      "values": [
        "movies",
        "games"
      ]
    },
    {
      "token": "fetch-type",
      "abbr": "ft",
      "hint": "product type",
      "env": true,
      "default": true,
      "required": true,
      "values": [
        "products",
        "account-products",
        "game-details"
      ]
    },
    {
      "token": "download-type",
      "abbr": "dt",
      "hint": "download product type",
      "env": true,
      "default": true,
      "required": true,
      "values": [
        "product-files",
        "images",
        "screenshots"
      ]
    },
    {
      "token": "os",
      "hint": "operating system",
      "desc": "operating system for the product files",
      "values": [
        "windows",
        "macos",
        "linux"
      ]
    },
    {
      "token": "lang",
      "hint": "language",
      "desc": "product files language",
      "values": [
        "en",
        "ru"
      ]
    }
  ],
  "values": []
}