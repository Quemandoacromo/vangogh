{
  "version": 1,
  "cmd": {
    "auth": [
      "username",
      "password"
    ],
    "fetch": [
      "product-type_!=store-page,account-page,wishlist-page,details,api-products-v1,api-products-v2",
      "media=game_,movie",
      "id...",
      "missing",
      "deny-ids-file"
    ],
    "stash": [
      "product-type_!=store-products,account-products,wishlist-products,details,api-products-v1,api-products-v2",
      "media=game_,movie",
      "property...=title,developer,publisher,image,box-art,logo,icon"
    ],
    "distill": [
      "product-type_!=store-products,account-products,wishlist-products,details,api-products-v1,api-products-v2",
      "media=game_,movie",
      "property...=title,developer,publisher,image,box-art,logo,icon"
    ],
    "download": [
      "download-type_!=image,box-art,logo,icon,background-image,galaxy-background-image,screenshots",
      "media=game_,movie",
      "os=current_,windows,macos,linux",
      "lang=en_,ru",
      "id...",
      "all"
    ],
    "list": [
      "product-type_!=store-products,account-products,wishlist-products,details,api-products-v1,api-products-v2",
      "media=game_,movie",
      "id...",
      "property...=id_,title_,developer,publisher,image,box-art,logo,icon,background-image,galaxy-background-image,screenshots"
    ],
    "search": [
      "media=game_,movie",
      "title...",
      "developer...",
      "publisher...",
      "image...",
      "box-art...",
      "logo...",
      "icon...",
      "background-image...",
      "galaxy-background-image...",
      "screenshots...",
      "property...=id_,title_,developer,publisher,image,box-art,logo,icon,background-image,galaxy-background-image,screenshots"
    ],
    "sync": [
      "media=game_,movie"
    ]
  },
  "help": {
    "vangogh": "CLI utility to sync and process GOG.com metadata, images and files",
    "auth": "authenticate on GOG.com and save session",
    "fetch": "fetch remote product data by media, type",
    "list": "list local product data by media, type",
    "fetch:id": "details ID",
    "download": "download product files by media, type",
    "download:id": "account product ID",
    "username": "GOG.com username",
    "password": "GOG.com password",
    "media": "media type - games or movies",
    "type": "GOG.com product type",
    "os": "operating system",
    "lang": "product files language"
  }
}